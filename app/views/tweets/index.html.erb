<p id="notice"><%= notice %></p>

    <% @tweets.each do |tweet| %>
      <div>
        <h3>
          <%= link_to tweet.status, tweet %><br>
          <small>Submited <%= time_ago_in_words(tweet.created_at) %> By  
            <%= link_to tweet.user.email, :controller => :profiles , :action => :show , :user => tweet.user %> 
             </small>
        </h3>
      </div>
    <% end %>
